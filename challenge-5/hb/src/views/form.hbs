<h1 class='text-center'>Form</h1>

<form action='/products' method='post'>
	<div class='form-group'>
		<label for='name'>Name</label>
		<input
			type='text'
			class='form-control'
			id='name'
			name='name'
			placeholder='name'
		/>
	</div>
	<div class='form-group'>
		<label for='price'>Price</label>
		<input
			type='number'
			class='form-control'
			id='price'
			name='price'
			placeholder='price'
		/>
	</div>
	<div class='form-group'>
		<label for='url'>Photo URL</label>
		<input
			type='text'
			class='form-control'
			id='url'
			name='url'
			placeholder='URL'
		/>
	</div>
	<button type='submit' class='btn btn-primary mt-3'>Send</button>
</form>

<br />

{{> table}}

<a class='btn btn-primary' href='/products'>Product table</a>