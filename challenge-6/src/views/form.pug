doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
    script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")
    script(src="/socket.io/socket.io.js")
    script.
        const socket = io.connect();

        const render = (data) => {
            const html = data
                .map(
                    (elem, index) =>
                        `<tr> 
                            <td>${elem.name}</td>
                            <td>${elem.price}</td>
                            <td>${elem.price}</td>
                        </tr>`
                )
                .join(' ');

            $('#products').append(html);
        };

        socket.on('products', (data) => {
            render(data);
        });

        const addProduct = (e) => {
            const product = {
                name: $('#name').val(),
                price: $('#price').val(),
                url: $('#url').val(),
            };
            socket.emit('new-product', product);

            return false;
        }

    title Challenge-5

body(class="w-50 mx-auto shadow-sm mt-5")
    h1.text-center Form

    form(onSubmit="return addProduct(this)")
        .form-group
            label(for='name') Name
            input#name.form-control(type='text' name='name' placeholder='name')
        .form-group
            label(for='price') Price
            input#price.form-control(type='number' name='price' placeholder='price')
        .form-group
            label(for='url') Photo URL
            input#url.form-control(type='text' name='url' placeholder='URL')
        button.btn.btn-primary.mt-3(type='submit') Send

    br

    include partials/table.pug

    a.btn.btn-primary(href='/products') Go to product table

    style.
        form {
            margin: 0 auto;
            width: 50%;
        }